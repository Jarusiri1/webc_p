<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"] - PEA</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">

    <!-- 2) Site CSS (ต้องอ้างหลัง Bootstrap) -->
    <link href="~/css/site.css" rel="stylesheet" />
    <style>
        body {
            background-color: #F5F5FA; /* สีพื้นหลังเทาอ่อนอมม่วงอ่อน */
            margin: 0;
        }
        .header-bar {
            background-color: #B6D5F4; /* ฟ้าอ่อนบนสุด */
            color: #2C2C54;
            padding: 0.5rem 1rem;
            position: fixed;
            width: 100%;
            top: 0;
            z-index: 1000;
            height: 60px;
        }
        .app-title {
            font-size: 24px;
            font-weight: bold;
            color: #2C2C54; /* น้ำเงินเข้ม */
            letter-spacing: 1px;
        }
        .strong {
            font-size: 40px;
        }
        .sidebar {
            width: 200px;
            background-color: #E6EDF8; /* สี sidebar */
            position: fixed;
            top: 60px;
            bottom: 0;
            padding-top: 20px;
        }
        .sidebar h5 {
            font-weight: bold;
            color: #444;
            padding: 0 1rem;
        }
        .sidebar a {
            display: block;
            color: #2C2C54;
            padding: 0.5rem 1rem;
            text-decoration: none;
        }
        .sidebar a:hover {
            background-color: #D1E6F7; /* ฟ้า hover */
        }
        .main-content {
            margin-left: 200px;
            margin-top: 60px;
            padding: 1.5rem;
        }
        /* เพิ่มความเรียบของปุ่ม */
        .btn-success {
            background-color: #4CAF50;
            border-color: #4CAF50;
        }
        .btn-success:hover {
            background-color: #45A049;
            border-color: #45A049;
        }
    </style>
</head>
<body>
    <!-- Header Bar -->
    <div class="header-bar d-flex justify-content-between align-items-center">
        <div class="d-flex align-items-center">
            <span class="app-title">PEA ACCESS CONTROL</span>
        </div>
        <div>
            @{
                var empNo = TempData["EmployeeNo"] as string;
                TempData.Keep("EmployeeNo");
            }
            @if (!string.IsNullOrEmpty(empNo))
            {
                <small>@empNo</small>
                <span class="badge bg-secondary">ADMIN</span>
                <a href="/Logout" class="btn btn-sm btn-outline-danger ms-2">ออกจากระบบ</a>
            }
            else
            {
                <small>ไม่ระบุผู้ใช้</small>
            }
        </div>
    </div>
    
    <!-- Sidebar -->
    <div class="sidebar">
        <h5>เมนู</h5>
        <a href="/App">แอปพลิเคชัน</a>
        <a href="/Permissions">สิทธิการใช้งาน</a>
        <a href="/Group">กลุ่มผู้ใช้งาน</a>
        <a href="/UserGroup">จัดกลุ่มผู้ใช้งาน</a>
        <a href="/SystemAdmins">ผู้ดูแลระบบ</a>
    </div>
    
    <!-- Main Content -->
    <div class="main-content">
        @RenderBody()
    </div>
    
    <!-- Scripts -->
    <!-- 1) jQuery core -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script>
        window.jQuery || document.write('<script src="/lib/jquery-3.6.0.min.js"><\/script>');
    </script>
    <!-- 2) jQuery Validation -->
    <script src="https://cdn.jsdelivr.net/npm/jquery-validation@1.19.5/dist/jquery.validate.min.js"></script>
    <!-- 3) jQuery Unobtrusive Validation -->
    <script src="https://cdn.jsdelivr.net/npm/jquery-validation-unobtrusive@3.2.12/dist/jquery.validate.unobtrusive.min.js"></script>
    <!-- 4) Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <!-- Bootstrap Modal Script: รอให้ DOM โหลดก่อน -->
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            const modalElement = document.getElementById('addModal');
            if (modalElement) {
                const modal = new bootstrap.Modal(modalElement);
                modal.show();
            }
        });
    </script>
    @RenderSection("Scripts", required: false)
</body>
</html>