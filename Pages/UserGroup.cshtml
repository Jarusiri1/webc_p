@page
@model MyWebApp.Pages.UserGroupsModel
@{
    ViewData["Title"] = "กลุ่มผู้ใช้งาน";
}

<h2>กลุ่มผู้ใช้งาน</h2>

<div class="d-flex justify-content-between mb-3">
    <div class="input-group input-group-sm" style="max-width: 300px;">
        <input id="searchInput" type="text" class="form-control" placeholder="ค้นหากลุ่ม" />
        <span class="input-group-text"><i class="bi bi-search"></i></span>
    </div>
    <button class="btn btn-success btn-sm" data-bs-toggle="modal" data-bs-target="#addGroupModal">
        + เพิ่มผู้ใช้งานในกลุ่ม
    </button>
</div>

<table class="table table-striped table-bordered text-center">
    <thead>
        <tr>
            <th style="width: 80px;">ลำดับ</th>
            <th>ชื่อกลุ่ม</th>
            <th>Employee No.</th>
            <th style="width: 120px;">จัดการ</th>
        </tr>
    </thead>
    <tbody>
        @{
            int rowNumber = 1;
        }
        @foreach (var ug in Model.UserGroups)
        {
            <tr>
                <td>@rowNumber</td>
                <td>@ug.Group?.GroupName</td>
                <td>@ug.EmployeeNo</td>
                <td>
                    <form method="post" asp-page-handler="Delete" asp-route-id="@ug.UserGroupId" style="display:inline">
                        <button type="submit" class="btn btn-sm btn-danger">ลบ</button>
                    </form>
                </td>
            </tr>
            rowNumber++;
        }
    </tbody>
</table>

<!-- Add Modal -->
<div class="modal fade" id="addGroupModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <form method="post" asp-page-handler="Add" autocomplete="off">
                <div class="modal-header">
                    <h5 class="modal-title">เพิ่มผู้ใช้งานในกลุ่ม</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <div class="mb-3">
                        <label class="form-label" for="groupSelect">กลุ่ม</label>
                        <select id="groupSelect" asp-for="NewGroup.GroupId" asp-items="Model.GroupSelectList" class="form-select">
                            <option value="">-- เลือกกลุ่ม --</option>
                        </select>
                    </div>
                    <div class="mb-3">
                        <label class="form-label" for="employeeNo">Employee No.</label>
                        <input id="employeeNo" 
                               asp-for="NewGroup.EmployeeNo" 
                               class="form-control" 
                               type="text"
                               placeholder="กรอกรหัสพนักงาน"
                               maxlength="50"
                               autocomplete="off" />
                        <span asp-validation-for="NewGroup.EmployeeNo" class="text-danger"></span>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">ยกเลิก</button>
                    <button type="submit" class="btn btn-success">บันทึก</button>
                </div>
            </form>
        </div>
    </div>
</div>

<script>
document.addEventListener('DOMContentLoaded', function() {
    const modal = document.getElementById('addGroupModal');
    const employeeInput = document.getElementById('employeeNo');
    
    // เมื่อ modal เปิด
    modal.addEventListener('shown.bs.modal', function() {
        // รีเซ็ตฟอร์ม
        employeeInput.value = '';
        // โฟกัสที่ input
        setTimeout(() => {
            employeeInput.focus();
            employeeInput.click();
        }, 100);
    });
    
    // ทดสอบ input
    employeeInput.addEventListener('keypress', function(e) {
        console.log('Key pressed:', e.key);
    });
    
    employeeInput.addEventListener('input', function(e) {
        console.log('Input value:', e.target.value);
    });
});
</script>